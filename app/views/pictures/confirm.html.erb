<h1>確認</h1>

<%= form_with(model: @picture, url:pictures_path , local: true) do |f| %>
  <p>content: <%= @picture.content %></p>
  <p>image: <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></p>
  <%= f.submit '投稿する！' %>

  <%= f.hidden_field :content %>
  <%= f.hidden_field :image_cache %>
<% end %>

<%= form_with(model: @picture, url:new_picture_path, local:true, method:"get") do |f| %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit '戻る', name: 'back' %>
<% end %>