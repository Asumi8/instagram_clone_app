<div class = "container">
  <table class="table table-sm">
    <% @pictures.each do |picture|%>
    <tr>
      <td>
        <div class = "profile_image">
          <%= image_tag picture.user.image.url %>
          <%= picture.user.name %>
        </div>
        <div class = "content_image">
          <%= image_tag picture.image.url %><br>
          <%= picture.content %>
        </div>
      
        <div class>
          <button class = "btn btn-outline-secondary btn-sm">
            <%= link_to '詳細', picture_path(picture.id) %>
          </button>
          <% if picture.user_id == current_user.id %> 
            <button class = "btn btn-outline-secondary btn-sm">
              <%= link_to '編集', edit_picture_path(picture.id), data:{ confirm:'本当に編集していいですか？'} %>
            </button>
            <button class = "btn btn-outline-secondary btn-sm">
              <%= link_to '削除', picture_path(picture.id), method: :delete, data:{ confirm:'本当に削除していいですか？'} %>
            </button>
          <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </div>
</table>

<style>
.content_image{
  margin:20px 0;
  text-align:center;
}
.content_image img{
  height:250px;
  width:250px;
}
button{
  margin:15px auto;
}
.btn btn-primary a{
  color: #ffffff;
}
.profile_image img{
  height:50px;
  width:50px;
  border-radius:50%;
  border:solid 1px #f758fc;
}
img{
  object-fit:cover;
}
.container{
  max-width:576px;
}
.btn-outline-secondary a{
  color:grey;
}
.btn-primary a{
  color:white;
}
</style>

